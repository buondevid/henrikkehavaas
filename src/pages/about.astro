<style>
	@keyframes fadeInFromBottom {
		from {
			transform: translateY(10px);
			opacity: 0;
		}
		to {
			transform: translateY(0);
			opacity: 1;
		}
	}

	@keyframes fadeInFromTop {
		from {
			transform: translateY(-10px);
			opacity: 0;
		}
		to {
			transform: translateY(0);
			opacity: 1;
		}
	}

	article {
		display: flex;
		height: 100%;
		padding: 0 2rem;
		justify-content: center;
		align-items: center;
	}

	.textWrapper {
		max-width: 450px;
		padding: 5rem;
		border-inline: 1px solid transparent;
		border-image: linear-gradient(
				to bottom,
				#a2682a 0%,
				#be8c3c 8%,
				#be8c3c 18%,
				#d3b15f 27%,
				/* #faf0a0 35%, */ /* #ffffc2 40%, */ /* #faf0a0 50%, */ #d3b15f 58%,
				#be8c3c 67%,
				#b17b32 77%,
				#bb8332 83%,
				#d4a245 88%,
				#e1b453 93%,
				#a4692a 100%
			)
			1;
		background: linear-gradient(
			to bottom,
			transparent 0%,
			rgba(0, 0, 0, 0.5) 50%,
			transparent 100%
		);

		&:nth-child(1) {
			animation: fadeInFromTop 0.5s;
		}

		&:nth-child(2) {
			animation: fadeInFromBottom 0.5s;
			margin-left: -1px;
			margin-top: 10rem;
		}
	}

	p {
		font-size: 1.1rem;
		text-align: justify;
	}

	.highlight {
		font-weight: 700;
	}
</style>
