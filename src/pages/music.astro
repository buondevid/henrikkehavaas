<style>
	article {
		display: flex;
		margin-block: 40px;
		gap: 40px;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		scroll-behavior: smooth;
	}

	span {
		/* align-self: flex-start; */
		/* margin-left: 20vw; */

		&:before {
			content: '';
			display: block;
			height: 1px;
			width: 100%;
			margin-bottom: 0.3rem;
			background-color: white;
			transition: scale 1s;
		}

		&:target::before {
			scale: 3;
		}
	}

	iframe {
		border: none;
		opacity: 0.5;
	}

	aside {
		position: fixed;
		display: flex;
		right: 5dvh;
