---
import { ViewTransitions } from 'astro:transitions';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />

		<!-- <link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=Josefin+Slab:ital,wght@0,100..700;1,100..700&display=swap'
			rel='stylesheet'
		/> -->

		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700'
			rel='stylesheet'
		/>

		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Navigation />
		<main>
			<slot />
		</main>
		<Footer />

		<style is:global>
			/* ðŸ‘‡ CSS Reset */
			*,
			*::before,
			*::after {
				box-sizing: border-box;
				margin: 0;
				padding: 0;
			}

			html {
				-moz-text-size-adjust: none;
				-webkit-text-size-adjust: none;
				text-size-adjust: none;
			}

			body {
				line-height: 1.5;
				-webkit-font-smoothing: antialiased;
			}

			img,
			picture,
			video,
			canvas,
			svg {
				display: block;
				max-width: 100%;
			}

			input,
			button,
			textarea,
			select {
				font: inherit;
			}

			p,
			h1,
			h2,
			h3,
			h4,
			h5,
			h6 {
				overflow-wrap: break-word;
			}

			/* ðŸ‘† CSS Reset */

			html {
				font-family: quicksand, system-ui, sans-serif;
				color: white;
				background-color: black;
				scroll-behavior: smooth;
			}

			body {
				display: flex;
				flex-direction: column;
				margin: 0;
				background-image: url('/henrikke_homepage.jpg');
				background-size: cover;
				background-repeat: no-repeat;
				background-attachment: fixed;
				background-position: center;
				height: 100dvh;
			}

			main {
				flex: 1;
				scroll-behavior: smooth;
				overflow-y: scroll;
				scrollbar-width: none;
			}
		</style>
	</body>
</html>
